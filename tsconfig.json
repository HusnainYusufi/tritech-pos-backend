{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": false,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"]   // only future TS files are checked
}
